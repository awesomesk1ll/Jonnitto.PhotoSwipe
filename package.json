{
  "name": "NeosPhotoSwipe",
  "description": "Dependencies for PhotoSwipe",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/jonnitto/Jonnitto.PhotoSwipe.git"
  },
  "browserslist": [
    "> 0.5%",
    "last 2 versions",
    "Firefox ESR",
    "not ie <= 10",
    "not ie_mob <= 10",
    "not bb <= 10",
    "not op_mob <= 12.1"
  ],
  "devDependencies": {
    "autoprefixer": "^9.6.0",
    "browserify": "16.2.3",
    "cssnano": "^4.1.10",
    "node-sass": "4.12.0",
    "photoswipe": "https://github.com/jonnitto/PhotoSwipe.git",
    "postcss-cli": "^6.1.2",
    "uglify-js": "^3.6.0",
    "uglifyify": "5.0.1"
  },
  "scripts": {
    "build:assets": "rsync -av node_modules/photoswipe/dist/default-skin/* Resources/Public/ --exclude *.css",
    "build:js": "browserify Resources/Private/Assets/Main.js | uglifyjs --mangle --compress > Resources/Public/Main.js",
    "build:rawjs": "browserify Resources/Private/Javascripts/Main.js -o Resources/Public/Main.js",
    "build:dark": "node-sass --include-path node_modules/photoswipe/src/css Resources/Private/Assets/Dark.scss Resources/Public/Dark.css | postcss Resources/Public/Dark.css -r",
    "build:light": "node-sass --include-path node_modules/photoswipe/src/css Resources/Private/Assets/Light.scss Resources/Public/Light.css | postcss Resources/Public/Light.css -r",
    "build:css": "yarn build:dark && yarn build:light",
    "build": "yarn build:assets && yarn build:css && yarn build:js",
    "start": "yarn build"
  }
}
